use PandemyAlert
go

declare @counter int =0
while @counter <121
begin
	set @counter = @counter +1
	if @counter<=10
		begin
		insert into Person([name], is_infected, FK_city_id)
		values ('John Doe', 1, 1)
		end
	else if @counter >10 and @counter<=20
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Jane Doe', 0, 2)
		end
	else if @counter >20 and @counter<=30
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Bob Doe', 1, 3)
		end
	else if @counter >30 and @counter<=40
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Cherry Doe', 0, 4)
		end
	else if @counter >40 and @counter<=50
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Cookie Doe', 1, 5)
		end
	else if @counter >50 and @counter<=60
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Cow Doe', 0, 6)
		end
	else if @counter >60 and @counter<=70
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Yang Doe', 1, 7)
		end
	else if @counter >70 and @counter<=80
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Si Doe', 0, 8)
		end
	else if @counter >8 and @counter<=90
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Doe Doe', 1, 9)
		end
	else if @counter >90 and @counter<=100
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Jane Doe', 0, 10)
		end
	else if @counter >100 and @counter<=110
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('John Doe', 1, 11)
		end
	else if @counter >110 and @counter<=120
		begin
		insert into Person([name], is_infected, FK_city_id)
		values('Jane Doe', 0, 12)
		end
end

declare @worldmean decimal , @counterCase1 int, @CityCount int 
select @worldmean = (select (COUNT([name])/12) from Person where is_infected = 1), @CityCount= (select COUNT(City.city_id) from City)
while @
if @counterCase1 = @worldmean
	print @counterCase1
